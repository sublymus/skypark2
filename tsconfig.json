{
  "include": [
    "./**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "./",
    "outDir": "build",
    "sourceMap": true,
    "jsx": "preserve"
  },
  "ts-node": {
    "esm": true
  }
}
